<!-- views/login.ejs -->

<!doctype html>
<html>
<%- include partials/header.ejs %>

<body>
    <%- include partials/navbar_admin.ejs %>

    <div class="row">
        <div class="col-md-3">

        </div>
        <div class="col-md-6">
            <h3>Payment List</h3>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">User</th>
                        <th scope="col">Type</th>
                        <th scope="col">Date In</th>
                        <th scope="col">Date Out</th>
                        <th scope="col">Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (var pay in payments) { %>
                    <tr>
                        <th scope="row">
                            <%= payments[pay].id %>
                        </th>
                        <td>
                            <%= payments[pay].user %>
                        </td>
                        <td>
                            <%= payments[pay].type %>
                        </td>
                        <td>
                            <%= payments[pay].date_in %>
                        </td>
                        <td>
                            <%= payments[pay].date_out %>
                        </td>
                        <td>
                            <% if (payments[pay].status == 1){ %>
                            <span>Active</span>
                            <% } else { %>
                            <span>Expired</span>
                            <% } %>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>


        </div>
    </div>
</body>

</html>