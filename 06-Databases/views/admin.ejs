<!-- views/login.ejs -->

<!doctype html>
<html>
<%- include partials/header.ejs %>

<body>
    <%- include partials/navbar_admin.ejs %>

    <div class="row">
        <div class="col-md-3">

        </div>
        <div class="col-md-6">
            <h3>Users List</h3>
            <% if (success) { %>
            <div class="alert alert-success" role="alert">
                Users Updated Successful!
            </div>
            <% } %>

            <% for (var key in users) { %>
            <div class="row card">

                <div class="col-md-10 card-body">
                    <p style="float: right;">
                        <span>
                            <%= users[key].username %></span>
                        <span>
                            <%= users[key].id %></span>

                    </p>
                    <p style="font-weight: bold; font-size: 2em;"">

                                <%= users[key].name %></p>
                            <p>
                                <%= users[key].lastname %>&nbsp;<%= users[key].lastname %></p>
                            <p >
                                <%= users[key].email %>
                            </p>                                            
                
                            <div class="
                        form-inline"style=" float:right">

                        <form action="/edit_user" method="post" class="form-group  mb-2">
                            <button type="submit" class="btn btn-success btn-lg" name="<%= users[key].id %>" style="margin-right: 15px;">Edit</button>
                        </form>
                        <form action="/delete_user" method="post" class="form-group mb-2">
                            <button type="submit" class="btn btn-danger btn-lg" name="<%= users[key].id %>" style="margin-right: 15px;">Edelete</button>
                        </form>
                </div>
            </div>
        </div>
        <% } %>

    </div>
    </div>
</body>

</html>